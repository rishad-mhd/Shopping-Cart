<section>
    {{#if shippedOrders}}
    <div class="container">
        <h1 class="text-center">Orders</h1>
        <div class="row">
            <div style="margin-top: 5em;" class="col-12">
                <table class="table">
                    <thead>
                        <th>Date</th>
                        <th>Address</th>
                        <th>Pincode</th>
                        <th>Mobile</th>
                        <th>Amount</th>
                        <th>Payment</th>
                        <th>Status</th>
                    </thead>
                    <tbody>
                        {{#each shippedOrders}}
                        <tr>
                            <td style="width: 15em;">{{this.date}}</td>
                            <td>{{this.deliveryDetails.address}}</td>
                            <td>{{this.deliveryDetails.pincode}}</td>
                            <td>{{this.deliveryDetails.mobile}}</td>
                            <td>{{this.totalAmount}}</td>
                            <td>{{this.paymentMethod}}</td>
                            <td>{{this.status}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{else}}
    <h1 class="text-center">No Shipped Orders</h1>
    {{/if}}
</section>