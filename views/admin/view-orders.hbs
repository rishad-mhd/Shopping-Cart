<section>
    <div class="container">
    {{#if order}}
        <h1 class="text-center">Orders</h1>
        <a href="/admin/view-shipped-orders" class="btn btn-success float-right">View Shipped Orders</a>
        <div class="row">
            <div style="margin-top: 5em;" class="col-12">
                <table class="table">
                    <thead>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Pincode</th>
                        <th>Mobile</th>
                        <th>Amount</th>
                        <th>Payment</th>
                        <th>Status</th>
                    </thead>
                    <tbody>
                        {{#each order}}
                        <tr>
                            <td>{{this.date}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.deliveryDetails.address}}</td>
                            <td>{{this.deliveryDetails.pincode}}</td>
                            <td>{{this.deliveryDetails.mobile}}</td>
                            <td>{{this.totalAmount}}</td>
                            <td>{{this.paymentMethod}}</td>
                            <td>{{this.status}}</td>
                            <td>
                                <a onclick="shipProduct('{{this._id}}')" class="btn btn-primary">Ship Product</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    {{else}}
    <h1 class="text-center">No Pending Orders</h1>
    <a href="/admin/view-shipped-orders" class="btn btn-success float-right">View Shipped Orders</a>
    {{/if}}
    </div>
</section>