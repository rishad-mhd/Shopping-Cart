<section style="padding-top:8em ;">
    <div class="container">
        <h2>{{value}}</h2>
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 16rem;">
                    <div style="height: 19rem;">
                        <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <h6 class="card-text">Rs.{{this.price}}</h6>
                        <p class="card-text">{{this.description}}</p>
                        <button onclick="addTocart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>