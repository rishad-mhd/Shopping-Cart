<section>
    <div class="container">
        <h1 class="text-center">Your Pending Orders</h1>
        <div style="margin-top: 5em;" class="col-12">
            <table class="table">
                <thead>
                    <th>Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th>Amount</th>
                    <th>Payment</th>
                    <th>Status</th>
                    <th>options</th>
                </thead>
                <tbody>
                    {{#each pending}}
                    <tr>
                        <td style="width: 17em;">{{this.date}}</td>
                        <td>{{this.deliveryDetails.address}}</td>
                        <td>{{this.deliveryDetails.pincode}}</td>
                        <td>{{this.deliveryDetails.mobile}}</td>
                        <td>{{this.totalAmount}}</td>
                        <td>{{this.paymentMethod}}</td>
                        <td>{{this.status}}</td>
                        <td>
                            <a href="/replace-order/{{this._id}}" class="btn btn-primary">Place Order</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>